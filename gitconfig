[include]
    path = ~/.gitconfig_local
[alias]
    a = add
    aa = add --all

    b = branch

    c = commit
    ca = commit --amend
    ci = commit --interactive
    cm = commit --message
    amend = commit -a --amend --no-edit

    l = log
    lg = log --graph --oneline
    sl = lg

    co = checkout

    s = status --short
    st = s
[pull]
	rebase = true
[merge]
    conflictstyle = diff3
    tool = vimdiff2
[core]
	editor = nvim
