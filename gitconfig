[include]
    path = ~/.gitconfig_local
[alias]
    a = add
    aa = add --all

    b = branch

    c = commit
    ca = commit --amend
    ci = commit --interactive
    cm = commit --message

    l = log
    lg = log --graph --oneline
    sl = lg

    o = checkout
    ob = checkout -b

    s = status --short
    st = s
[pull]
	rebase = true
[merge]
    conflictstyle = diff3
    tool = vimdiff2
